<% content_for :page_title, "Logic Questions" %>

<div class="ibox-content">
  <div class="table-responsive">
    <table class="table table-condensed table-striped table-bordered table-hover dataTables-example dataTable dtr-inline no-footer" id="logic-questions-datatable">
      <thead>
      <tr>
        <th>Question</th>
        <th class="hidden-xs hidden-sm">Solution</th>
        <th class="hidden-xs hidden-sm">Published</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @logic_questions.each do |logic_question| %>
          <tr>
            <td><%= logic_question.question %></td>
            <td class="hidden-xs hidden-sm"><%= logic_question.solution %></td>
            <td class="hidden-xs hidden-sm"><%= logic_question.published %></td>
            <td><%= link_to 'Show', logic_question %></td>
            <td><%= link_to 'Edit', edit_logic_question_path(logic_question) %></td>
            <td><%= link_to 'Destroy', logic_question, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Logic question', new_logic_question_path, {class: "btn btn-default"} %>

</div>
