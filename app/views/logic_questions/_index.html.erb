<div class="ibox">
  <div class="ibox-title">
    <h5>Logic Questions</h5>
    <span class="pull-right">
      <%= link_to '<i class="fa fa-plus"></i>New Question'.html_safe, new_course_logic_question_path(@course), {class: "btn btn-white btn-sm ibox-title-btn"} %>
    </span>
  </div>
  <div class="ibox-content">
    <div class="table-responsive">
      <table class="table table-condensed table-striped table-bordered table-hover dataTables-example dataTable dtr-inline no-footer" id="logic-questions-datatable">
        <thead>
        <tr>
          <th>Question</th>
          <th class="hidden-xs hidden-sm">Solution</th>
          <th class="hidden-xs hidden-sm">Published</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @logic_questions.each do |logic_question| %>
            <tr>
              <td><%= logic_question.question %></td>
              <td class="hidden-xs hidden-sm"><%= logic_question.solution %></td>
              <td class="hidden-xs hidden-sm"><%= logic_question.published %></td>
              <td><%= link_to 'Show', [@course,logic_question] %></td>
              <td><%= link_to 'Edit', edit_course_logic_question_path(@course,logic_question) %></td>
              <td><%= link_to 'Destroy', [@course,logic_question], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
