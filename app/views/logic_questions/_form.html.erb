<%= simple_form_for(@logic_question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= image_tag @logic_question.question_image.url %>
    <%= f.input :question_image %>
    <%= f.input :solution %>
    <%= f.input :position %>
    <%= f.input :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
