<% content_for :page_title, "Cohorts" %>

<div class="ibox-content">
<table class="table table-condensed table-striped table-bordered table-hover dataTables-example dataTable dtr-inline no-footer" id="cohorts-datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Prework start</th>
      <th>Classroom start</th>
      <th>Graduation</th>
      <th>Applications open</th>
      <th>Applications close</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.prework_start %></td>
        <td><%= cohort.classroom_start %></td>
        <td><%= cohort.graduation %></td>
        <td><%= cohort.applications_open %></td>
        <td><%= cohort.applications_close %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cohort', new_cohort_path, {class: "btn btn-default"} %>
</div>