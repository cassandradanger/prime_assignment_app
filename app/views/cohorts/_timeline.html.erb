<div class="timeline-item">
  <div class="row">
    <div class="col-xs-3 date">
      <i class="fa <%= icon ||= 'fa-times'  %>"></i>
      <%= dateval.strftime('%b %d') %>
      <br>
      <small class="text-navy"><%= 'in ' if dateval > Time.now %><%= time_ago_in_words(dateval) %><%= ' ago' if dateval < Time.now %></small>
    </div>
    <div class="col-xs-7 content no-top-border">
      <p class="m-b-xs"><strong><%= description ||= 'missing description' %></strong></p>
    </div>
  </div>
</div>