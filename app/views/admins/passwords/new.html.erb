<% content_for :page_title, "Admin Forgot Password" %>

<div class="middle-box text-center loginscreen animated fadeInDown">

  <div class="1">
    <h1 class="logo-name">
      <%= link_to image_tag("logo-prime.svg", :alt => "Prime - Software Engineering Academy", :itemprop => "logo"), root_path %>
    </h1>
  </div>

  <p>Forgot your password?</p>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), layout: :vertical, html: {method: :post, class: "m-t"}) do |f| %>
      <%= flash_messages %>
      <%= f.text_field :email, required: false, autofocus: true %>
      <%= f.submit "Send me reset password instructions", {class: "btn btn-primary block full-width"} %>
  <% end %>

</div>