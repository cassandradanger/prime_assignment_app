<% content_for :page_title, "Admin Login" %>

<div class="middle-box text-center loginscreen animated fadeInDown">

    <div class="1">
        <h1 class="logo-name">
          <%= link_to image_tag("logo-prime.svg", :alt => "Prime - Software Engineering Academy", :itemprop => "logo"), root_path  %>
        </h1>
    </div>
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :vertical, html: { class: "m-t"}) do |f| %>
      <%= flash_messages %>
        <%= f.text_field :email, required: false, autofocus: true, hide_label: :true, placeholder: "Email Address", input_html: {id: "user_login_email"} %>
        <%= f.password_field :password, required: false, hide_label: :true, placeholder: "Password", input_html: {id: "user_login_password"} %>
        <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.submit "Login",{class: "btn btn-primary block full-width"} %>
        <br />
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <small><%= link_to "Forgot your password?", new_password_path(resource_name) %></small>
        <% end -%>
    <% end %>

</div>
