<%= bootstrap_form_for(@admin) do |f| %>
    <%= f.alert_message "Please fix the errors below." %>
    <%= f.text_field :email %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.select :status, ['Active','Inactive'] %>
    <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Reset Password', edit_password_admin_path(@admin), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Cancel', admins_path, class: 'btn btn-link btn-sm' %>

<% end %>