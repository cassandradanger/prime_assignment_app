<!doctype html>
<html class="no-js" lang="en-us">
<head>
    <!-- META DATA -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--[if IE]><meta http-equiv="cleartype" content="on" /><![endif]-->

    <!-- SEO -->
    <title>PrimeAcademy.io</title>
    <meta name="description" content="Public recruiting website for Prime." />
    <meta name="author" content="" />

    <!-- SECURITY -->
	<%= csrf_meta_tags %>

    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="57x57" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ env.URL_BASE }}assets/media/images/apple-touch-icon-180x180.png">
    <link rel="icon" type="image/png" href="{{ env.URL_BASE }}assets/media/images/favicon-192x192.png" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ env.URL_BASE }}assets/media/images/favicon-160x160.png" sizes="160x160">
    <link rel="icon" type="image/png" href="{{ env.URL_BASE }}assets/media/images/favicon-96x96.png" sizes="96x96">
    <link rel="icon" type="image/png" href="{{ env.URL_BASE }}assets/media/images/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="{{ env.URL_BASE }}assets/media/images/favicon-32x32.png" sizes="32x32">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ env.URL_BASE }}assets/media/images/mstile-144x144.png">        

    <!-- STYLESHEETS -->
    <%= stylesheet_link_tag 'modern', media: 'screen, projection', 'data-turbolinks-track' => true %>
    <!--[if lte IE 8]><%= stylesheet_link_tag 'legacy', media: 'screen, projection', 'data-turbolinks-track' => true %><![endif]-->
    <%= stylesheet_link_tag 'print', media: 'print', 'data-turbolinks-track' => true %>

</head>
<body>
    
    <div class="video-header">
    	<%= image_tag "image-header.jpg", :class=>"video-header-video" %>
    </div>

    <div class="layout">

        <div class="layout-header">
            <div class="layout-header-banner">
                <div class="logo">
                    <a href="{{ env.URL_SITE }}" class="logo-link">
                        <%= image_tag "logo-prime-horizontal.png", :alt=>"Prime - Software Engineering Academy", :itemprop=>"logo" %>
                        <h1 class="isHidden" itemprop="name">Prime Software Engineering Academy</h1>
                    </a>
                </div>
                <button class="navigation-button">Menu</button>
                <div class="navigation">
                    <h2 class="isHidden">Navigation</h2>
                    <ul class="navigation-menu">
                        <li class="navigation-menu-item"><a href="#program" class="navigation-menu-item-link">Program</a></li>
                        <li class="navigation-menu-item"><a href="#curriculum" class="navigation-menu-item-link">Curriculum</a></li>
                        <li class="navigation-menu-item"><a href="#tuition" class="navigation-menu-item-link">Tuition</a></li>
                        <li class="navigation-menu-item"><a href="#network" class="navigation-menu-item-link">Network</a></li>
                        <li class="navigation-menu-item"><a href="#faq" class="navigation-menu-item-link">FAQ</a></li>
                        <li class="navigation-menu-item"><a href="/apply" class="navigation-menu-item-link">Apply</a></li>
                    </ul>
                </div><!-- /navigation -->
            </div><!-- /layout-header-banner -->
        </div><!-- /layout-header -->

        <div class="layout-flash">
			<div class="notice"><%= notice %></div>
			<div class="alert"><%= alert %></div>
        </div>

        <div class="layout-body">
            <!-- CONTENT -->         
            <%= yield %>
        </div><!-- /layout-body -->    

        <div class="layout-footer" id="footer">
            <p>Footer content</p>
        </div><!-- /layout-footer -->
    </div><!-- /layout -->

    <!-- JAVASCRIPT -->
    <%= requirejs_include_tag 'application' %>
</body>
</html>