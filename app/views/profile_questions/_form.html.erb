<%= simple_form_for(@profile_question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= f.input :published %>
    <%= f.input :scoring_guideline_1 %>
    <%= f.input :scoring_guideline_2 %>
    <%= f.input :scoring_guideline_3 %>
    <%= f.input :scoring_guideline_4 %>
    <%= f.input :scoring_guideline_5 %>
    <%= f.input :position %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
