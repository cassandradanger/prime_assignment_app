<%= bootstrap_form_for([@course,@profile_question]) do |f| %>

    <%= f.text_area :question, rows: 5 %>
    <%= f.check_box :published %>
    <%= f.text_area :scoring_guideline_1, rows: 5  %>
    <%= f.text_area :scoring_guideline_3, rows: 5  %>
    <%= f.text_area :scoring_guideline_5, rows: 5  %>
    <%= f.text_field :position %>
    <%= f.submit "Save" %>
<% end %>
